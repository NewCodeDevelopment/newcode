{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**"],
            "env": [
                "NODE_ENV",
                "NEXT_PUBLIC_SITE_URL",
                "API_URL",
                "API_TOKEN",
                "SENDGRID_API_KEY",
                "ADMIN_EMAIL"
            ]
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false,
            "env": ["NODE_ENV", "API_URL", "API_TOKEN", "SENDGRID_API_KEY", "ADMIN_EMAIL"]
        }
    },
    "globalEnv": ["NODE_ENV"]
}
